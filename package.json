{
  "name": "chrome-cmd",
  "version": "2.1.2",
  "description": "Control Chrome from the command line - List tabs, execute JavaScript, and more",
  "keywords": [
    "chrome",
    "cmd",
    "cli",
    "browser",
    "automation",
    "tabs"
  ],
  "author": "Lucas Vieira",
  "license": "MIT",
  "type": "module",
  "main": "dist/src/cli/index.js",
  "bin": {
    "chrome-cmd": "./dist/src/cli/index.js",
    "chromecmd": "./dist/src/cli/index.js",
    "chr": "./dist/src/cli/index.js"
  },
  "scripts": {
    "prepare": "husky || true",
    "typecheck": "tsc --noEmit",
    "build": "rimraf ./dist && tsup",
    "postbuild": "tsx scripts/post-build.ts && npm run update-docs",
    "update-docs": "NODE_ENV=production tsx scripts/update-commands-docs.ts",
    "dev": "tsx src/cli/index.ts",
    "start": "node dist/src/cli/index.js",
    "format": "biome format --write .",
    "lint": "biome check --write .",
    "changeset": "changeset",
    "release": "NODE_ENV=production pnpm run build && changeset publish"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "commander": "^14.0.0",
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.2",
    "@changesets/cli": "^2.27.8",
    "@commitlint/cli": "^18.6.1",
    "@commitlint/config-conventional": "^18.6.2",
    "@types/chrome": "^0.0.286",
    "@types/node": "^24.0.14",
    "husky": "^9.0.11",
    "lint-staged": "^16.2.4",
    "rimraf": "5.0.5",
    "tsup": "^8.3.5",
    "turbo": "^2.5.5",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  }
}
