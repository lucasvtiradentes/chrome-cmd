{
  "name": "chrome-cmd",
  "version": "1.0.2",
  "description": "Control Chrome from the command line - List tabs, execute JavaScript, and more",
  "keywords": [
    "chrome",
    "cmd",
    "cli",
    "browser",
    "automation",
    "tabs"
  ],
  "author": "Lucas Vieira",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "chrome-cmd": "./dist/index.js",
    "chromecmd": "./dist/index.js",
    "chr": "./dist/index.js"
  },
  "files": [
    "dist",
    "scripts"
  ],
  "scripts": {
    "typecheck": "tsc --noEmit",
    "build": "rimraf ./dist && tsc && bash scripts/post-build.sh",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "format": "biome format --write .",
    "lint": "biome check --write .",
    "prepublish": "pnpm run build",
    "install-host": "bash scripts/install-host.sh"
  },
  "dependencies": {
    "chalk": "^5.4.1",
    "commander": "^14.0.0"
  },
  "devDependencies": {
    "@types/node": "^24.0.14",
    "rimraf": "5.0.5",
    "tsx": "^4.20.3",
    "typescript": "^5.8.3"
  }
}
